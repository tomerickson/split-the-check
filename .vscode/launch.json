{
    "version": "0.2.0",
    "configurations": [{
            "name": "Launch Chrome against localhost",
            "type": "chrome",
            "request": "launch",
            // "trace": true,
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "/*"
            }
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            // "trace": true,
            "url": "http://localhost:4200/*",
            "port": 4200,
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "/*"
            }
        }
    ]
}